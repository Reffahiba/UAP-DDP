			refresh();
			getch();
			clear();
		}
		else{
			mvprintw(11, 11, "Jawaban Anda Salah"); mvprintw(11, 31, "Nilai : %d", nilai[0] = 0 );
			refresh();
			getch();
		}
		
		clear();
	}
		
}
